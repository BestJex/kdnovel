<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keduw.dao.ChapterMapper">
    <resultMap id="BaseResultMap" type="com.keduw.model.Chapter">
        <id column="chapterId" jdbcType="INTEGER" property="chapterId"/>
        <result column="novelId" jdbcType="INTEGER" property="novelId"/>
        <result column="chapter" jdbcType="VARCHAR" property="chapter"/>
        <result column="chapterUrl" jdbcType="VARCHAR" property="chapterUrl"/>
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.keduw.model.Chapter">
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>
    <sql id="Base_Column_List">
        chapterId, novelId, chapter, chapterUrl
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>
    <!--新增章节信息-->
    <insert id="insertChapter" parameterType="java.util.List">
        INSERT INTO chapter(novelId, chapter, content, chapterUrl)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.novelId}, #{item.chapter}, #{item.content}, #{item.chapterUrl})
        </foreach>
    </insert>
    <!--更新章节名字以及内容-->
    <insert id="updateChapter" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=",">
            UPDATE chapter SET chapter = #{item.chapter},content = #{item.content}
            WHERE chapterId = #{item.chapterId} AND novelId = #{item.novelId}
        </foreach>
    </insert>
    <!--根据小说id返回章节列表-->
    <select id="selectInfoByNovelId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM chapter WHERE novelId = #{novelId}
    </select>
    <!--获取章节总数-->
    <select id="selectCounts" resultType="java.lang.Integer">
        SELECT COUNT(chapterId) FROM chapter
    </select>
    <!--获取content为空的章节列表-->
    <select id="selectInfoByContent" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM chapter WHERE content is null
    </select>
</mapper>