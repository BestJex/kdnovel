<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keduw.dao.ChapterMapper">
    <resultMap id="BaseResultMap" type="com.keduw.model.Chapter">
        <id column="chapterId" jdbcType="INTEGER" property="chapterid"/>
        <result column="novelId" jdbcType="INTEGER" property="novelid"/>
        <result column="chapter" jdbcType="VARCHAR" property="chapter"/>
        <result column="chapterUrl" jdbcType="VARCHAR" property="chapterurl"/>
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="com.keduw.model.Chapter">
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>
    <sql id="Base_Column_List">
        chapterId, novelId, chapter, chapterUrl
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>
    <!--新增章节信息 -->
    <insert id="insertChapter" parameterType="com.keduw.model.Chapter">
        INSERT INTO chapter(novelId, chapter, content, chapterUrl)
        VALUES(#{novelId}, #{chapter}, #{content}, #{chapterUrl});
    </insert>
    <!--更新章节名字以及内容 -->
    <update id="updateChapter" parameterType="com.keduw.model.Chapter">
        UPDATE chapterInfo SET chapter = #{chapter},content = #{content}
        WHERE chapterId = #{chapterId} AND chapter is null;
    </update>
    <!--根据小说id返回章节列表 -->
    <select id="selectInfoByNovelId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM chapter WHERE novelId = #{novelId};
    </select>
</mapper>